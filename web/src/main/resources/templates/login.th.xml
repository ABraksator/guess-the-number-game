<thlogic>
    <attr sel="#login-message" th:text="#{user.login.request}"/>
    <attr sel="#userNameLabel" th:text="#{user.login.nameLabel}"/>
    <attr sel="#userPasswordLabel" th:text="#{user.login.passwordLabel}"/>
    <attr sel="#loginLabel" th:value="#{user.login.loginLabel}"/>
    <attr sel="#registrationLink" th:text="#{user.login.registrationLink}"/>
    <attr sel="#login-fail-message" th:text="${loginMessage}"/>
    <attr sel="#footerId" th:replace="~{fragments/footer :: footer}"/>
    <attr sel="headId" th:replace="~{fragments/head :: head}"/>
</thlogic>